/**
 * Styles for RadioGroups
 */

.jsk-radio-group {
    .jsk-radio-items {
        font-size: 1.2em
        line-height: 2em
        height: 2em
        margin-bottom: 0.5em
        color: jsk-input-text-colour
    }

    .jsk-radio-item-button {
        width: 1.4em
        border: 4px jsk-input-border-colour solid
        border-radius: 100%
        margin-right: 0.5em
        text-align: center
    }
    .jsk-radio-item-button, .jsk-radio-item-label {
        display: inline-block
        height: 1.4em
        line-height: 1.4em
        vertical-align: top
    }
    .jsk-radio-item {
        cursor: pointer
    }
    .jsk-radio-item-fill {
        width: 0px
        height: 0px
        background: jsk-input-focus-colour
        border-radius: 100%
        border: 1px solid clouds
        transition: all 250ms ease-in-out
        display: inline-block
        vertical-align: top
    }
    .jsk-radio-item.active .jsk-radio-item-fill {
        width: 100%
        height: 100%
    }
    &.jsk-non-editable {
        .jsk-radio-item-fill {
            background: jsk-base-faded-colour
        }
        .jsk-radio-item {
            cursor: default
        }
    }
}