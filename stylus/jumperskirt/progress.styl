/**
 * Default style for progress bars.
 */

.jsk-progress {
    margin: 2em auto;
    height: 30px;
    text-align: center;

    .jsk-progress-part {
        background-color: jsk-base-faded-colour
        height: 100%;
        width: 6px;
        margin-left: 1px;
        display: inline-block;
    }
    .jsk-progress-part:first-child {
        margin-left: 0;
    }
    .jsk-progress-filled {
        background-color: jsk-primary-colour
    }
    &.jsk-progress-unknown {
        .jsk-progress-part {
            animation: stretchdelay 1.2s infinite ease-in-out;
        }
        .jsk-progress-part2 {
            animation-delay: -1.1s;
        }
        .jsk-progress-part3 {
            animation-delay: -1.0s;
        }
        .jsk-progress-part4 {
            animation-delay: -0.9s;
        }
        .jsk-progress-part5 {
            animation-delay: -0.8s;
        }
    }
}
@keyframes stretchdelay {
  0%, 40%, 100% {
      transform: scaleY(0.4)
  }
  20% {
      transform: scaleY(1.0)
  }
}
