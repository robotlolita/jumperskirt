@import "./includes/colours"

/**
 * Button definitions
 */

.jsk-button {
    display: inline-block
    padding: 1em 2em
    color: jsk-base-faded-colour
    transition: all 250ms ease-in-out
    font-size: 1.2em
    background: transparent
    cursor: pointer

    &:hover {
        color: darken(jsk-base-faded-colour, 20%)
    }
    &:active {
        background: clouds
    }

    &.jsk-primary {
        color: jsk-base-colour
        background: jsk-primary-accent-colour

        &:hover {
            background: lighten(jsk-primary-accent-colour, 10%)
        }
        &:active {
            background: jsk-primary-colour
        }
    }
}