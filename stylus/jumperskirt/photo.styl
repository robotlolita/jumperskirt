/**
 * Styles for photo input
 */

.jsk-photo-field {
    .jsk-item {
        display: inline-block
        width: 150px
        height: 150px
        margin: 0 20px 20px 0
        cursor: pointer
        position: relative
        vertical-align: top
    }
    .jsk-photo-label {
        text-transform: uppercase
        font-weight: 600
        bottom: 10px
        right: 10px
        position: absolute
    }
    .jsk-photo-icon {
        position: absolute
        top: 0px
        left: 0px
        width: 100%
        height: 100%
        line-height: 130px
        text-align: center
        font-size: 60px
        font-weight: 600
    }
    .jsk-photo-add {
        border: 3px jsk-input-border-colour dashed
        color: jsk-input-border-colour

        input {
            position: absolute
            top: 0px
            left: 0px
            width: 100%
            height: 100%
            opacity: 0
            cursor: pointer
        }
    }
    .jsk-photo-empty, .jsk-photo-current {
        background: clouds
        border: 3px jsk-input-border-colour solid
        color: jsk-input-border-colour
    }
    .active {
        border-color: jsk-input-focus-colour
    }
    .jsk-photo-current {
        overflow: hidden

        img {
            width: 100%
            height: auto
            position: absolute
            left: 0px
            top: 0px
        }
    }

    &.jsk-non-editable {
        .jsk-item {
            cursor: default
        }
        input {
            display: none
        }
    }
}