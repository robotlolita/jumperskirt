/**
 * Default style for text inputs
 */

.jsk-text-field {
    position: relative

    input {
        background: transparent
        box-shadow: none
        border: none
        border-bottom: 1px solid jsk-input-border-colour
        color: jsk-input-text-colour
        display: block
        width: 100%
        height: 2em
        line-height: 2em
        padding: 0 0.5em
        font-size: 1.2em
        transition: all 250ms ease-in-out
        transition-property: border, color
    }

    .jsk-field-label {
        display: block;
        font-size: 0.8em
        text-transform: uppercase
        font-weight: 600;
        color: jsk-input-label-colour
        margin-bottom: 5px
        opacity: 0
        transition: opacity 250ms ease-in-out
    }

    .jsk-field-description {
        margin-top: 5px
        color: jsk-input-description-colour
    }

    &.jsk-has-text {
        .jsk-field-label {
            opacity: 1
        }
    }
    &.jsk-focused:not(.jsk-non-editable) {
        input {
            color: jsk-input-focus-colour
            border-color: jsk-input-focus-colour
            border-width: 2px
        }
    }

}